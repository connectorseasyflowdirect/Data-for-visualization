{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-indent-props": 0,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 2,
    "arrow-parens": 0,
    "no-debugger": "off"
  },
  "plugins": [
    "react"
  ]
}
